        ],
        "url": "{{apiBase}}/stats"
      }
    },
    {
      "name": "Reminders - Upcoming",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{id_token}}", "type": "text" },
          { "key": "x-user-id", "value": "{{dev_user_id}}", "type": "text" }
        ],
        "url": {
          "raw": "{{apiBase}}/reminders/upcoming?days=14&status=Applied,Interview",
          "host": ["{{apiBase}}"],
          "path": ["reminders", "upcoming"],
          "query": [
            { "key": "days", "value": "14" },
