          { "key": "Authorization", "value": "Bearer {{id_token}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-user-id", "value": "{{dev_user_id}}", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"Interview\",\n  \"dueDate\": \"2025-09-10\"\n}"
        },
        "url": "{{apiBase}}/cards/:cardId"
      }
    },
    {
      "name": "Cards - Delete",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{id_token}}", "type": "text" },
          { "key": "x-user-id", "value": "{{dev_user_id}}", "type": "text" }
        ],
        "url": "{{apiBase}}/cards/:cardId"
      }
    },
    {
      "name": "Stats - Get",
