    {
      "name": "Cards - List",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{id_token}}", "type": "text" },
          { "key": "x-user-id", "value": "{{dev_user_id}}", "type": "text" }
        ],
        "url": {
          "raw": "{{apiBase}}/cards?limit=25&status=Saved,Applied&q=",
          "host": ["{{apiBase}}"],
          "path": ["cards"],
          "query": [
            { "key": "limit", "value": "25" },
            { "key": "status", "value": "Saved,Applied" },
            { "key": "q", "value": "" }
          ]
        }
      }
    },
    {
      "name": "Cards - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{id_token}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-user-id", "value": "{{dev_user_id}}", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Software Engineer\",\n  \"company\": \"Acme\",\n  \"location\": \"Toronto\",\n  \"status\": \"Applied\",\n  \"dueDate\": \"2025-09-05\",\n  \"tags\": [\"backend\"],\n  \"notes\": \"Applied via career page\"\n}"
        },
        "url": "{{apiBase}}/cards"
      }
    },
    {
